<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
	android:orientation="vertical"
	android:gravity="center"
	android:background="@color/Background"    
    tools:context="com.livroandroid.carros.MainActivity$PlaceholderFragment" >
	    
    <!-- 
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" 
    
    -->
    	
   	<!-- <include layout="@layout/include_header" />  -->
   	
   	<com.google.android.apps.iosched.ui.widget.DashboardLayout
   	    
   	    android:layout_width="fill_parent"
   	    android:layout_height="0dp"    	    
   	    android:layout_weight="1">
   	    
   	    
   	    <Button 
	   		android:id="@+id/btClassicos"
	    	android:text="@string/labelClassicos"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:drawableTop="@drawable/button_car_classico"
	    	android:drawablePadding="10dp"
	    	android:background="@null"
	    	android:textStyle="@color/Preto"
	    />
   	    
   	    <Button 
	   		android:id="@+id/btLuxo"
	    	android:text="@string/labelLuxo"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:drawableTop="@drawable/button_car_luxo"
	    	android:drawablePadding="10dp"
	    	android:background="@null"
	    	android:textStyle="@color/Preto"
    	/>
    	    	    
   	    <Button 
	   		android:id="@+id/btEsportivos"
	    	android:text="@string/labelEsportivos"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:drawableTop="@drawable/button_car_sporting"
	    	android:drawablePadding="10dp"
	    	android:background="@null"
	    	android:textStyle="@color/Preto"
	    />
   	    
   	    <Button 
	   		android:id="@+id/btSobre"
	    	android:text="@string/labelSobre"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:drawableTop="@drawable/button_car_sobre"
	    	android:drawablePadding="10dp"
	    	android:background="@null"
	    	android:textStyle="@color/Preto"
	    />
   	    
   	</com.google.android.apps.iosched.ui.widget.DashboardLayout>
   	
   	<!--  <include layout="@layout/include_footer" />  -->
</LinearLayout>
